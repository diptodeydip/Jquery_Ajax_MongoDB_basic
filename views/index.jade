extends layout

block customcss
	style(type="text/css").
		div	{
			width: 100%;
			margin: auto;
			border-radius: 5px;
			background-color: #f2f2f2;
			padding: 20px;
			text-align: center;
			}


block content
	div
		h1= title
		p Welcome to #{title}


		h1= "Add some info!"
			p Email:
				input(type="text" id="email" name="email" placeholder="@gmail.com")
			p Name:
				input(type="text" id="name" name="name" placeholder="dip")
			button(type="button" id="save") Add

	div#div(style="overflow-y:scroll;overflow-x:visible;height:200px;")

		table#table
			th Name
			th Email
			tr#tr
				td#td1
				td#td2

block customjs
	script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js")
	script(src='/javascripts/custom.js')